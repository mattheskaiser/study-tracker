generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

enum CourseStatus {
  open
  in_progress
  done
}

model User {
  id String @id @default(uuid())
  email String @unique
  courses Course[]
}

model Course {
  id String @id @default(uuid())
  name String
  semester String
  status CourseStatus
  grade Float?
  userId String
  user User @relation(fields: [userId], references: [id])
}