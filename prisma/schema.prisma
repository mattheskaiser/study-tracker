// Commands to run after changing prisma schema:
// npx prisma migrate dev --name whatever-change-was-implemented
// npx prisma generate

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum CourseStatus {
  open
  in_progress
  done
}

model User {
  id String @id @default(uuid())
  email String @unique
  pin String
  courses Course[]
}

model Course {
  id String @id @default(uuid())
  name String
  semester String
  status CourseStatus
  grade Float?
  userId String
  user User @relation(fields: [userId], references: [id])
}